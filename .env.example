PORT=3000
MONGODB_URI=mongodb://localhost:27017/manga-reader
NODE_ENV=development

# Auto-update settings
AUTO_UPDATE_INTERVAL_HOURS=24
AUTO_UPDATE_INTERVAL_MINUTES=0    # For testing: set to 1 for 1-minute updates
AUTO_UPDATE_ON_STARTUP=false


IMAGE_COMPRESSION_ENABLED=true
IMAGE_COMPRESSION_QUALITY=80      # 1-100, higher = better quality. 60-70 is good for manga.
IMAGE_FORMAT=webp                 # webp, avif, jpeg, png. AVIF has best compression.
IMAGE_RESIZE_WIDTH=1600           # 0 to disable. 1600 is plenty for mobile/desktop reading.


# Scraping settings
USE_NEXTJS_DATA=true              # Set to false to force old regex/DOM scraping method
IMAGEKIT_URL_ENDPOINT=
IMAGEKIT_PRIVATE_KEY=
IMAGEKIT_PUBLIC_KEY=


IMGBB_API_KEY=
IMGBB_USE_UNIQUE_NAME=true      # true/false
IMGBB_EXPIRATION=               # seconds, optional (60..15552000)
IMGBB_UPLOAD_BATCH_SIZE=3       # lower concurrency for ImgBB to avoid 429
IMGBB_UPLOAD_JITTER_MIN_MS=150  # random delay before each ImgBB upload
IMGBB_UPLOAD_JITTER_MAX_MS=500
IMGBB_RETRY_DELAY_MS=3000       # wait before retrying failed ImgBB pages
STORAGE_PROVIDER=               # imagekit | imgbb (empty = auto detect)
STORAGE_UPLOAD_BATCH_SIZE=50
